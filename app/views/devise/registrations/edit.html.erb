<%= bootstrap_devise_error_messages! %>

  <div class="panel-heading">
    <h1>Benutzerdaten bearbeiten</h1>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email"%>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :username, "Benutzername" %>
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Passwort" %> <i>(<%= t('.nur_bei_Änderung', :default => "nur bei Änderung") %>)</i><br />
      <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Passwortbestätigung" %><br />
      <%= f.password_field :password_confirmation, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :current_password, "Aktuelles Passwort" %> <i>(<%= t('.zum_Bestätigen_der_Änderungen', :default => 'zum Bestätigen der Änderungen') %>)</i>
      <%= f.password_field :current_password, class: "form-control" %>
    </div>
    <%= f.submit t('.update', :default => "Update"), class: "btn btn-primary" %>
    </div>
<% end %>
