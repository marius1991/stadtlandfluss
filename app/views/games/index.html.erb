<h1>Laufende Spiele</h1>


<% if @games.exists? %>
    <table>
      <tbody>
      <% @games.each do |game| %>
          <tr>
            <th><h3><%= game.name %></h3></th>
            <th><h3><%= game.max_round_count %></h3></th>
            <td><%= link_to 'Beitreten!', game, class: "btn btn-success" %></td>

          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <p class="alert alert-warning">Derzeit gibt es keine laufenden Spiele</p>
    <p> <%= button_to "Aktualisieren!", games_path(@game), :method => :get, class:"btn btn-primary" %> </p>
<% end %>

