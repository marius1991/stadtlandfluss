    <% if @game.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert"
                  aria-hidden="true">
            &times;
          </button>
          <p style="font-size:18px">Eingabe überprüfen!</p>
          <ul>
            <% for message in @game.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

<h1>Neues Spiel starten</h1>

<%= form_for @game do |f| %>
    <div class="form-group">
      <%= f.label :name, 'Spielname'%><br>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :max_round_count, 'Rundenanzahl'%><br>
      <%= f.text_field :max_round_count, class:"form-control" %>
    </div>
    <div class="actions"><%= f.submit 'Spiel anlegen', class:"btn btn-primary" %></div>
<% end %>
<button type="button" class="btn btn-default btn-xs" onClick="history.go(-1);return true;">Zurück</button>